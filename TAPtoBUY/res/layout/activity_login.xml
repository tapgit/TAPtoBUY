<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/login_background"
    android:orientation="vertical"
    tools:ignore="DuplicateIds,HardcodedText,ExtraText" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        >

        <EditText
            android:id="@+id/searchAtLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:inputType="text"
            android:ems="10"
            android:hint="Search"
            android:scrollHorizontally="true"
            android:textSize="28sp"
            android:textStyle="italic" >
        
        </EditText>

        <Button
            android:id="@+id/bSearch"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="51dp"
            android:layout_height="52dp"
            android:layout_margin="5dp"            
            android:background="@drawable/remote_search" />
        
        </LinearLayout> 
   
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button
           
            style="?android:attr/buttonStyleSmall"
            android:layout_width="400dp"
            android:layout_height="6dp"
            android:layout_margin="5dp"
            android:layout_weight="21.07"
            android:background="@drawable/customb2"
            android:clickable="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="56dp" >

        <Button
            android:id="@+id/bCart"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="5dp"            
            android:background="@drawable/cart" />

        <Button
            android:id="@+id/bCategories"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="85dp"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:background="@drawable/cate_icon" />
    </LinearLayout>
    
      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <Button            
            style="?android:attr/buttonStyleSmall"
            android:layout_width="400dp"
            android:layout_height="6dp"
            android:layout_margin="5dp"
            android:layout_weight="21.07"
            android:background="@drawable/customb2"
            android:clickable="false" />

    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/signInLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" >

            <TextView
                android:id="@+id/textSign_in"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="5.79"
                android:text="Already a member? Sign in!" />

            <Button
                android:id="@+id/bSign_in"
                android:layout_width="95dp"
                android:layout_height="50dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="5dp"
                android:text="Sign in" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signInLay"
            android:layout_marginTop="20dp" >

            <TextView
                android:id="@+id/textRegister"
                android:layout_width="196dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Not a TAPtoBUY member? Create an account!" />

            <Button
                android:layout_width="15dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:clickable="false"
                android:visibility="invisible" />

            <Button
                android:id="@+id/bRegister"
                android:layout_width="95dp"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:text="Register" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="285dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" >

            <Button
                android:id="@+id/bSign_Out"
                android:layout_width="110dp"
                android:layout_height="55dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                android:text="Sign out" />

            <ImageView
                android:id="@+id/signOutPic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="23dp"
                android:visibility="gone"
                android:src="@drawable/signoutcar" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>