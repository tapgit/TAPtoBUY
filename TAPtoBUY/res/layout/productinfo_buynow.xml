<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/description_background"
    >

    <ImageView
        android:id="@+id/BuyInfoProdPic"
        android:layout_width="300dp"
        android:layout_height="140dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/android" />

    <TextView
        android:id="@+id/BuyInfoProdTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/BuyInfoProdPic"
        android:textStyle="bold"
        android:fontFamily="comic sans"
        android:text="Product Title"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/BuyInfoProdBrand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/BuyInfoProdID"
        android:layout_below="@+id/BuyInfoProdID"
        android:text="Brand"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/BuyInfoDimensions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/BuyInfoProdBrand"
        android:layout_below="@+id/BuyInfoProdBrand"
        android:text="Dimensions"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/BuyInfoProdID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/BuyInfoProdTitle"
        android:layout_below="@+id/BuyInfoProdTitle"
        android:text="Product ID"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/BuyInfoAddToCartb"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="46dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/BuyInfoProdBrand"
        android:text="Add to Cart" />

    <TextView
        android:id="@+id/BuyInfoSellerUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/BuyInfoDescription"
        android:layout_below="@+id/BuyInfoDescription"
        android:text="SellerUsername"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/BuyInfoPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/BuyInfoSellerUserName"
        android:layout_below="@+id/BuyInfoSellerUserName"
        android:text="Price+Shipping"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/BuyInfoBuyNowb"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="46dp"
        android:layout_alignBaseline="@+id/BuyInfoAddToCartb"
        android:layout_alignBottom="@+id/BuyInfoAddToCartb"
        android:layout_alignRight="@+id/BuyInfoDescription"
        android:layout_marginRight="29dp"
        android:text="Buy Now" />

    <TextView
        android:id="@+id/BuyInfoDescription"
        android:layout_width="140dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/BuyInfoDimensions"
        android:layout_alignRight="@+id/BuyInfoProdPic"
        android:layout_below="@+id/BuyInfoDimensions"
        android:layout_marginTop="15dp"
        android:inputType="textMultiLine"
        android:textStyle="bold"
        android:text="Description:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
